all: \
	$(addsuffix .str, $(basename $(wildcard iso/movies/*.mp4))) \
	$(addsuffix .str, $(basename $(wildcard iso/movies/*/*.mp4)))

# STR converts
iso/movies/%.str: iso/movies/%.mp4
	tools/psxavenc/psxavenc -t str -I -b 4 -c 2 -x 2 -v v3b -F 1 $< $@

clean:
	echo "Cleaning .str files:"
	find iso -type f \( -name "*.str" \) -print -delete